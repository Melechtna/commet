{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "commet (debug desktop)",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define", "PLATFORM=desktop"
            ],
        },
        {
            "name": "commet (debug mobile)",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define", "PLATFORM=mobile"
            ],
        },
        {
            "name": "commet (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "commet (release desktop)",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define", "PLATFORM=desktop",
                "--dart-define", "BUILD_MODE=release"
            ],
            "flutterMode": "release"
        }
    ]
}